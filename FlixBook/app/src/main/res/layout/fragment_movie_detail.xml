<RelativeLayout

    android:id="@+id/fragment_detail_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alvinsvitzer.flixbook.MovieDetailFragment">

    <com.android.volley.toolbox.NetworkImageView

        android:id="@+id/movie_backdrop_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/large_movie_placeholder"

        />

    <TextView
        android:id="@+id/banner_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/movie_backdrop_image"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"
        android:height="50dp"
        />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/movie_poster_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@id/banner_text_view"
        android:src="@drawable/small_movie_placeholder"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/movie_plot_synopsis_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@id/banner_text_view"
        card_view:cardBackgroundColor="#EEEEEE"
        card_view:cardElevation="4dp"
        >

        <TextView
            android:id="@+id/movie_plot_synopsis_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            />


    </android.support.v7.widget.CardView>

</RelativeLayout>
