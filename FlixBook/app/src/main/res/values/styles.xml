<resources>

    <!-- Application Theme Styles -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Layout Styles -->

    <style name="CardViewMovieTitle">
        <item name="cardBackgroundColor">#EEEEEE</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="CardViewMovieDate">
        <item name="cardBackgroundColor">#EEEEEE</item>
        <item name="cardElevation">4dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextViewMoviePosterTitle">
        <item name="android:maxHeight">60dp</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextViewMoviePosterDate">
        <item name="android:maxHeight">20dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextViewMovieDetailLabel" >
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewMovieDetailText">
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="TextViewMovieDetailSynopsis">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>

    </style>

    <style name="TextViewBanner">
        <item name="android:height">50dp</item>
        <item name="android:paddingLeft">30dp</item>
    </style>

    <style name="DividerMovieDetail">
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="ImageMovieDetailPoster">
        <item name="android:padding">1dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <!-- Action Bar Styles -->

    <style name="TransparentActionBarKeepUpNav" parent="AppTheme">

        <item name="android:windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/ActionBarStyle.Transparent</item>

        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>

    </style>

    <style name="ActionBarStyle.Transparent" parent="@style/Widget.AppCompat.ActionBar">

        <item name="android:background">@android:color/transparent</item>

        <!-- Support library compatibility -->
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
