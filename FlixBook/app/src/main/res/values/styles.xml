<resources>

    <!-- Application Theme Styles -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Layout Styles -->

    <style name="CardViewMovieTitle">
        <item name="cardBackgroundColor">#EEEEEE</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <style name="CardViewMovieDate">
        <item name="cardBackgroundColor">#EEEEEE</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="android:paddingBottom">@dimen/card_padding_vertical</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextViewMoviePosterTitle">
        <item name="android:maxHeight">@dimen/movie_poster_title_max_height</item>
        <item name="android:minHeight">@dimen/movie_poster_title_min_height</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextViewMoviePosterDate">
        <item name="android:maxHeight">@dimen/movie_poster_date_max_height</item>
        <item name="android:minHeight">@dimen/movie_poster_date_min_height</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextViewMovieDetailLabel">
        <item name="android:paddingStart">@dimen/movie_detail_label_padding_horizontal</item>
        <item name="android:paddingBottom">@dimen/movie_detail_label_padding_vertical</item>
        <item name="android:paddingTop">@dimen/movie_detail_label_padding_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewMovieDetailText">
        <item name="android:paddingStart">@dimen/movie_detail_text_padding_horizontal</item>
    </style>

    <style name="TextViewMovieDetailSynopsis">
        <item name="android:paddingStart">@dimen/movie_detail_text_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/movie_detail_text_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/movie_detail_text_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/movie_detail_text_padding_vertical</item>

    </style>

    <style name="DividerMovieDetail">
        <item name="android:paddingTop">@dimen/movie_detail_text_padding_vertical</item>
    </style>

    <style name="MaterialFAB" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_margin">@dimen/fab_margin</item>
    </style>

    <!-- Action Bar Styles -->

    <style name="TransparentActionBarKeepUpNav" parent="AppTheme">

        <item name="android:windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/ActionBarStyle.Transparent</item>

        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>

    </style>

    <style name="ActionBarStyle.Transparent" parent="@style/Widget.AppCompat.ActionBar">

        <item name="android:background">@android:color/transparent</item>

        <!-- Support library compatibility -->
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
